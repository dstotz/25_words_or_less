<% @team_score_list = [] %>
<% if $game[session.id] %>
  <% $game[session.id].scores.each do |team, score| %>
    <% @team_score_list << "<p class=\"score-list\">#{team}: &nbsp &nbsp <b>#{score}</b></p>" %>
  <% end %>
  <% @team_score_list << '<p class="score-list">&nbsp;</p>' if @team_score_list.count.odd? %>
<% end %>

<div class="col-md-12">
  <div class="row">
    <% split_count = (@team_score_list.count / 2) %>
    <% split_count = 1 if split_count.zero? %>
    <% @team_score_list.each_slice(split_count) do |group| %>
      <%= "<div class=\"col-md-6 col-sm-6 col-6\">" %>
      <%= group.join %>
      <%= '</div>' %>
    <% end %>
  </div>
</div>
<hr/>