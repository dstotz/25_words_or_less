<div>
  <div class="col-md-4 col-md-offset-4">
    <div class="form-group">
      <label for="bid-amount">Winning Bid Amount</label><br />
      <input id="bid-amount" name="bid-amount" class="input-group-text" type="text" pattern="[0-9]*">

      <div id="timer-amount">
        <label for="timer-selection">Countdown Timer</label>
        <select class="form-control" id="timer-selection" name="timer-selection">
          <option>30 Seconds</option>
          <option>1 Minute</option>
          <option selected="selected">2 Minutes</option>
          <option>3 Minutes</option>
          <option>5 Minutes</option>
        </select>
      </div>
    </div>
  </div>

  <audio id="alert-sound" src="audio/alert2.mp3" preload="auto"></audio>
  <div id="round-clock" class="round-clock"></div>

  <button id="start-timer-button" type="submit" class="btn btn-info">Start Timer</button>
  <button id="stop-timer-button" type="submit" class="btn btn-warning">Stop Timer</button>
</div>

<script type="text/javascript">
  $('#start-timer-button').click(start_round_clock)
  $('#stop-timer-button').click(stop_round_clock)
</script>